{
  "name": "revolt-bot-unified",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "register-commands": "node scripts/register-commands.js",
    "docker:build": "docker build -t revolt-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env revolt-bot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "deploy:local": "bash scripts/deploy.sh ghcr.io/owner/revolt-bot:latest main",
    "deploy:setup-cron": "bash scripts/setup-cron.sh",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "cleanup:github": "bash scripts/cleanup-github.sh",
    "cleanup:manual": "powershell -ExecutionPolicy Bypass -File scripts/manual-cleanup.ps1"
  },
  "dependencies": {
    "@discordjs/rest": "^2.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "axios": "^1.10.0",
    "discord-api-types": "^0.37.0",
    "discord-interactions": "^3.4.0",
    "mongodb": "^6.17.0",
    "next": "^14.2.31",
    "next-auth": "^4.24.7",
    "pm2": "^6.0.8",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "eslint": "^8",
    "eslint-config-next": "14.2.5"
  }
}
